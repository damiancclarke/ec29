#   Number of immunized inhabitants
# -----------------------------------------------------------------

vaccines_map <- vaccines %>% 
  filter(!is.na(`Total de vacinas administradas (por 100 hab.)`)) %>% 
  group_by(País) %>% 
  filter(Data == max(Data)) %>% 
  ungroup() %>% 
  select(c("iso","País","Total de pessoas imunizadas (por 100 hab.)","Total de vacinas administradas (por 100 hab.)")) %>% 
  left_join(shape_world,by = "iso") %>% 
  st_as_sf() %>%
  st_transform(4326) %>% 
  filter(!is.na(iso)) %>% 
  select(-iso) %>% 
  mutate(`Total de pessoas imunizadas (por 100 hab.)` = ifelse(is.na(`Total de pessoas imunizadas (por 100 hab.)`),0,`Total de pessoas imunizadas (por 100 hab.)`)) %>% 
  filter(País!="Gibraltar") %>% 
  rename("Total de pessoas imunizadas (por 1000 hab.)" =  "Total de pessoas imunizadas (por 100 hab.)",
         "Total de vacinas administradas (por 1000 hab.)" = "Total de vacinas administradas (por 100 hab.)") %>% 
  mutate(`Total de pessoas imunizadas (por 1000 hab.)` = `Total de pessoas imunizadas (por 1000 hab.)`*10,
         `Total de vacinas administradas (por 1000 hab.)` = `Total de vacinas administradas (por 1000 hab.)`*10)

map_df <- vaccines_map 

max <- ceiling(max(map_df$`Total de pessoas imunizadas (por 1000 hab.)`,na.rm = T)/10)*10



color_map2 <- c('#f7fcf0','#e0f3db','#ccebc5','#a8ddb5','#7bccc4','#4eb3d3','#2b8cbe','#0868ac','#084081')

mapviewOptions(legend.pos ="bottomright")
m_countries_i <- map_df %>%
  filter(!is.na(`Total de pessoas imunizadas (por 1000 hab.)`)) %>%
  mapview(zcol="Total de pessoas imunizadas (por 1000 hab.)",
          color = "#000000",
          na.color = "#FFFFFF",
          legend=T,
          layer.name = "Total de pessoas imunizadas (por 1000 hab.)",
          legend.opacity = 0.3,
          alpha.region=0.8,
          alpha=0.05,
          at = c(0,round(lseq(0.1,120,length.out = 7),1),max),
          col.regions = color_map2,
          map.types = c("CartoDB.Positron", "OpenStreetMap.DE"),
          popup = popupTable(map_df %>% filter(!is.na(`Total de pessoas imunizadas (por 1000 hab.)`)),
                             zcol = c("País",
                              "Total de pessoas imunizadas (por 1000 hab.)",
                              "Total de vacinas administradas (por 1000 hab.)")))

