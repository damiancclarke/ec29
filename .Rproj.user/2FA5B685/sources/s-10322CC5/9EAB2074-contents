max <- ceiling(max(world$Número)/1000000)*1000000


g_world <- world %>% ggplot(aes(x=`Data`,
                                  y=Número,
                                  fill=Afetados)) +
                geom_area(data = world %>% filter(Afetados == "Casos confirmados"),
                          aes(x=`Data`,
                              y=Número,
                              fill=Afetados),
                          alpha = 0.8) +
                geom_area(data = world %>% filter(Afetados == "Casos recuperados"),
                          aes(x=`Data`,
                              y=Número,
                              fill=Afetados),
                          alpha = 0.8) +
                geom_area(data = world %>% filter(Afetados == "Mortes"),
